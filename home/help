echo ""
echo "To check the dynamic inventory output from Azure:"
echo "        ansible-inventory -i inventory/linux_azure_rm.yml --graph"
echo ""
echo "To check basic configuration of hosts:"
echo "        ansible -i inventory/linux_azure_rm.yml linux_hosts -m debug"
echo ""
echo "To check SSH access to hosts:"
echo "        ansible -i inventory/linux_azure_rm.yml linux_hosts -m ping -u <ssh username>"
echo ""
echo "To run a playbook:"
echo "        ansible-playbook playbooks/ping.yml -i inventory/linux_azure_rm.yml -u <ssh username>"
echo ""
echo "To run a playbook with vars:"
echo "        ansible-playbook playbooks/demo-playbook.yml -i inventory/linux_azure_rm.yml -u <ssh username> -e \"var1='test1' var2='test2'\""
echo ""
echo " (add -vvv to get verbose outputs from ansible commands)"
echo ""
echo "To force set the SSH public key to an Azure Linux VM use the ./push-public-ssh-key bash script."
echo ""
echo ""
cd ~

